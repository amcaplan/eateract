<%= date_field(:meal, :time, name: "meal[date]", class: "hidden hidden-date-field") %>
<%= time_field(:meal, :time, class: "hidden hidden-time-field") %>

<div id="myModal" class="reveal-modal" data-reveal>
  <h2>You're almost done!</h2>
  <div class="small-10 large-6 columns">
    <p class="lead">Choose a date for your meal...</p>
    <%= date_field(:meal, :time, name: "meal[date]", class: "visible-date-field") %>
  </div>
  <div class="small-10 large-6 columns">
    <p class="lead">...and a time...</p>
    <%= time_field(:meal, :time, class: "visible-time-field") %>
  </div>
  <div class="small-10 large-6 columns">
    <p class="lead small-text-center">...and you're done!</p>
  </div>
  <div class="small-10 large-6 columns small-text-center">
    <a class="button alert large pre-submit">FINISHED!</a>
  </div>

  <%= f.submit "Submit meal", class: "hidden", id: "the-actual-submit-button", style: "border: 4px solid white" %>
  <a class="close-reveal-modal">&#215;</a>
</div>