<h1>Listing meals</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Topic</th>
      <th>Cuisine type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.time %></td>
        <td><%= meal.topic %></td>
        <td><%= meal.cuisine_type %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

