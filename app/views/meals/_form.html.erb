<%= form_for @meal, class: "meal-form" do |f| %>
  <dl class="tabs" data-tab>
    <dd class="active"><a href="#guests">Choose Guests</a></dd>
    <dd><a href="#topic">Initiate the Conversation</a></dd>
    <dd><a href="#food">Design the Menu</a></dd>
  </dl>
  <div class="tabs-content">
    <div class="content active" id="guests">
      <%= render partial: 'guests_form', locals: {f: f} %>
    </div>
    <div class="content" id="topic" data-equalizer-watch>
      <%= render partial: 'topics_form', locals: {f: f} %>
    </div>
    <div class="content" id="food">
      <%= render partial: 'menu_form', locals: {f: f} %>
    </div>
    <div class="content" id="time">
      <%= render partial: 'time_form', locals: {f: f} %>
    </div>
    <%= f.submit "Stash changes", class: "button alert small-6 columns meal-form-submit" , style: "border: 4px solid white" %>
    <input class="button alert small-6 columns meal-form-submit" style="border: 4px solid white" type="submit" value="Save meal" data-reveal-id="myModal" data-reveal>
  </div>
<% end %>